{ 
  "format_version": "1.20.20", 
  "minecraft:block": { 
    "description": { 
      "identifier": "scp:small_door_upper",
      "menu_category": {
        "category": "construction",
        "group": "itemGroup.name.planks"
       },
      "traits": {
        "minecraft:placement_direction": {
          "enabled_states": ["minecraft:cardinal_direction"],
          "y_rotation_offset": 180
        }
      },
      "states": {
        "door:open": ["false", "true", "null"]
      }
    },
   "components": {
    "minecraft:geometry": "geometry.small_door_upper_close", 
    "minecraft:material_instances": {
     "*": { 
      "texture": "small_door_upper",
      "render_method": "alpha_test"
     } 
    },
    "minecraft:collision_box": {
      "origin": [-8, 0, -1],
      "size": [16, 16, 2]
    },
    "minecraft:selection_box":{
      "origin": [-8, 0, -1],
      "size": [16, 16, 2]
    }
   },
   "permutations": [
      {
        "condition": "q.block_state('minecraft:cardinal_direction') == 'north' || q.block_state('minecraft:cardinal_direction') == 'south'",
        "components": {
          "minecraft:transformation": { "rotation": [0, 180, 0] }
        }
      },
      {
        "condition": "q.block_state('minecraft:cardinal_direction') == 'west' || q.block_state('minecraft:cardinal_direction') == 'east'",
        "components": {
          "minecraft:transformation": { "rotation": [0, -90, 0] }
        }
      },
      {
        "condition": "q.block_state('door:open') == 'false'",
        "components": {
          "minecraft:collision_box": {
            "origin": [-8, 0, -1],
            "size": [16, 16, 2]
          },
          "scp:small_door_upper": {
            "control": "door:open",
            "direction": "minecraft:cardinal_direction"
          },
          "minecraft:geometry": "geometry.small_door_upper_close"
        }
      },
      {
        "condition": "q.block_state('door:open') == 'true'",
        "components": {
          "minecraft:collision_box": {
            "origin": [0, 0, 0],
            "size": [0, 0, 0]
          },
          "scp:small_door_upper": {
            "control": "door:open",
            "direction": "minecraft:cardinal_direction"
          }
        }
      },
      {
        "condition": "q.block_state('door:open') == 'null'",
        "components": {
          "minecraft:collision_box": {
            "origin": [0, 0, 0],
            "size": [0, 0, 0]
          }
        }
      }
    ]
  } 
} 